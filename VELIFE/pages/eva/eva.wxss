page{
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.main{
  padding: 20rpx;
}
.title{
  display: flex;
  align-items: center;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}
.evaList{
  width: 100%;
  margin-top: 20rpx;
}
.evaLi{
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.evaLeft{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
}
.evaRight{
  flex: 1;
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.scroll{
  padding: 20rpx;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
.first{
  color: #8C929E;
}
.name{
  color: #000;
  margin-right: 10rpx;
}
.score{
  position: absolute;
  right: 0;
  top: 0;
}
.con{
  color: #5E5D64;
  letter-spacing: 2rpx;
  line-height: 34rpx;
  margin:20rpx 0;
}
.conImg{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin: 20rpx;
}
.pullRight{
  float: right;
}
.imgBox,.bottom{
  overflow: hidden;
  color: #A3A7B1;
}
.bottom>view{
  float: left;
}
.loading{
  text-align: center;
  font-size: 30rpx;
  display:flex;
justify-content:center;
align-items:center;

}
.load{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
}
.load image{
  width: 100%;
  height: 100%;
}