page{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 35%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tx{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.tx image{
  width: 100%;
  height: 100%;
}
.wel{
  font-size: 40rpx;
  color: #000;
  margin: 10rpx 0;
}
.address{
  color: #424242;
  font-size: 24rpx;
}
.main{
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.main>view{
  border-bottom: 2rpx solid #DFDFDF;
  font-size: 28rpx;
  line-height: 80rpx;
}
.pullRight{
  float: right;
}