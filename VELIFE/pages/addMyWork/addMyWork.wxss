page{
  width: 100%;
}
.main{
  padding: 20rpx;
}
.title{
  display: flex;
  align-items: center;
   margin-top: 20rpx;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}
.upload{
  width: 350rpx;
  height: 350rpx;
  margin-top: 20rpx;
  border: 2rpx solid #bebebe;
  position: relative;
  float: left;
}
.upload image{
  width: 100%;
  height: 100%;
}
.mainBox>view{
  border-bottom: 2rpx solid #DFDFDF;
  font-size: 28rpx;
  line-height: 80rpx;
}
.pullRight{
  float: right;
  width: 80%;
}
.camera{
  width: 60rpx;
  height: 60rpx;
  background: rgba(0,0,0,0.6);
  position: absolute;
  right: 0;
  bottom: 0;
}
.up{
  margin-top: 30rpx;
  background: #E31E4C;
  color: #fff;
  width: 80%;
  font-size: 30rpx;
}
.picker{
  text-align: right;
}