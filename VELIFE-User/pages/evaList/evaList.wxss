page{
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.main{
  padding: 20rpx;
}
.title{
  display: flex;
  align-items: center;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}
.evaList{
  width: 100%;
  margin-top: 20rpx;
}
.evaLi{
  display: flex;
  margin: 40rpx 0;
  position: relative;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 40rpx;
}
.evaLeft{
  width: 80rpx;
  height: 80rpx;
  background: red;
  overflow: hidden;
  border-radius: 50%;
}
.evaRight{
  flex: 1;
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.scroll{
  padding: 0 20rpx;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
.first{
  color: #8C929E;

}
image{
  width: 100%;
  height: 100%;
}
.first{
  color: #8C929E;
  position: relative;margin-bottom: 20rpx;
}
.name{
  color: #000;
  margin-right: 10rpx;
}
.score{
  position: absolute;
  right: 0;
  top: 0;
}
.con{
  color: #5E5D64;
  letter-spacing: 2rpx;
  line-height: 34rpx;
}
.conImg{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin: 20rpx;
}
.pullRight{
  float: right;
}
.imgBox,.bottom{
  overflow: hidden;
  color: #A3A7B1;
}
.bottom>view{
  float: left;
}
.evaScro{
  width: 150rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  justify-content: space-around;
}
.evaScroLi{
  width: 30rpx;
  height: 30rpx;
}
.evaScroLi image{
  float: left;
}
.nothing{
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
  color:#aaa;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}