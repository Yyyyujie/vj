.tabBox{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}
.tab{
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.tab.active{
  border-bottom: 2rpx solid #DB2657;
  color: #DB2657;
}
.title{
  text-align: center;
  font-size: 36rpx;
  margin: 20rpx 0 10rpx;
  letter-spacing: 4rpx;
}
.tip{
  text-align: center;
  font-size: 20rpx;
  color: #AFAFAF;
}
.main{
  width: 100%;
  overflow: hidden;
}
.imgBox{
  width: 50%;
  height: 380rpx;
  float: left;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.imgBox image,.upload image{
  width: 100%;
  height: 100%;
}
.upload{
  width: 60rpx;
  height: 60rpx;
  background: rgba(0,0,0,0.6);
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.Box1{
  margin-top: 20rpx;
}
.mask,.mask1,.mask2{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  position: fixed;
  top: 0;
  left: 0;
  padding: 0 20rpx;
    box-sizing: border-box;
    text-align: center;
}
.mask image,.mask1 image,.mask2 image{
  display: block;
  margin: 0 auto;
  max-height: 70%;
}
.upLoadBox{
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}
.upLoadBox>view{
  background: #E60146;
  color: #fff;
  margin: 20rpx;
  padding:10rpx  50rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
}
.hideBtn{
  display: inline-block;
  background: #E60146;
  color: #fff;
  padding:10rpx  50rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  margin: 40rpx auto;
}
