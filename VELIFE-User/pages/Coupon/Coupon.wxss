.main{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.inputBox{
  width: 100%;
  height: 60rpx;
  position: relative;
  margin: 30rpx 0;
}
.inputBox input{
  font-size: 26rpx;
}
.btn{
  height: 60rpx;
  background: #E01C44;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
  padding: 0 30rpx;
  font-size: 22rpx;
  border-radius: 10rpx;
}
.title{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}
.first{
  width: 100%;
}
.card{
  width: 75%;
  height: 300rpx;
  margin: 30rpx auto;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
  background: linear-gradient(-45deg,#A8E6FF,#5CA6FB);
}
.card>image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0
}
.cardLeft{
  width: 60%;
  height: 100%;
  float: left;
  font-size: 26rpx;
  color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.carRight{
  width: 40%;
  height: 100%;
  float: right;
  padding: 30rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
}
.cardTitle{
 width:150rpx;
height:80rpx;
  text-align: center;
  position: relative;
  
}
.cardTitle>image{
  height: 100%;
  width: 50%;
  display: inline-block;
}
.cardTitle text{
  font-size: 28rpx;
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 80rpx;
  color: #fff;
}
.cardBottom view{
  letter-spacing: 2rpx;
  line-height: 30rpx;
  margin: 10rpx 0;
}
.cardBottom view:last-child{
  font-size: 16rpx;
  letter-spacing: 0;
}
.cardBottom{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
}
.carRight text:nth-child(2){
  font-size:120rpx;
  line-height:220rpx;
  padding-left: 20rpx;
}
.carRight text:nth-child(1){
  display: block;
  position: absolute;
  left: 30rpx;
  top: 60rpx;
}
.zhe text:nth-child(1){
  font-size:100rpx;
  line-height:220rpx;
  position:unset;
  float:right;
  margin-right:20rpx;
}
.zhe text:nth-child(2){
  display:100rpx;
  position:absolute;
  right:15px;
  bottom:45px;
  font-size:24rpx;
  line-height:initial;
}
 .cardBox .first:nth-child(2) .card{
  width: 75%;
  height: 300rpx;
  margin: 30rpx auto;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
  background: linear-gradient(-45deg,#FEC053,#FF8C87,#FF87A3);
}