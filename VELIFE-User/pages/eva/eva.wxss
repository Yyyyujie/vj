.main{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.title{
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.titleIcon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.titleIcon image{
  width: 100%;
  height:100%;
}
.evaCon{
  width: 100%;
  border: 1rpx solid #ccc;
  margin-top: 30rpx;
  overflow: hidden;
  position: relative;
}
.evaCon textarea{
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.plac{
  font-size: 24rpx;
}
.upload{
  width: 60rpx;
  height: 60rpx;
  background: rgba(0,0,0,0.4);
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  z-index: 99999;
}
.upload image{
  width: 100%;
  height: 100%;
}
.imgBox{
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin: 10rpx;
  border: 1rpx solid #ccc;
    padding: 10rpx;
  box-sizing: border-box;
}
.imgBox image,.storeIcon image,.evaScroLi image{
  width: 100%;
  height: 100%;
}
.storeIcon{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 20rpx;
}
.store{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  position: relative;
}
.evaScro{
  width: 150rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  display: flex;
  justify-content: space-around
}
.evaScroLi{
  width: 30rpx;
  height: 30rpx;
}
.evaScroLi image{
  float: left;
}
.sub{
  width: 80%;
  margin-top: 50rpx;
  background: #E31E4C;
  color: #fff;
  font-size: 30rpx;
}