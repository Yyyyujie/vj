page{
  width: 100%;
  height: 100%;
}
.banner{
  width: 100%;
  height: 32%;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
}
.bannerZi{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.75);
}
.bannerZi image{
  width: 50%;
  height: 70%;
}
.main{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.person{
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}
.person1 view{
  display: inline-block;
  margin-right: 10rpx;
}
.person1 view:nth-child(1){
  width: 30rpx;
  height: 10rpx;
  background: #E70046;
  border-radius: 10rpx;
}
.person1 view:nth-child(2){
  width: 10rpx;
  height: 10rpx;
  background: #E70046;
  border-radius: 50%;
}
.person1 view:nth-child(3){
  width: 10rpx;
  height: 10rpx;
  background: #1E60E3;
  border-radius: 50%;
}
.eng{
  font-weight: bold;
  color: #E70046;
  font-size: 30rpx;
}
.zh-cn{
  font-size: 30rpx;
  color: #E70046;
}
.formBox{
  width: 100%;
  overflow: hidden;
}
.formBox view{
  font-size: 24rpx;
  font-weight: bold;
  color: #A8A8A8;
  margin: 30rpx 0 20rpx;
}
.formBox input{
  font-size: 36rpx;
}
.inp{
  color: #504748;
}
.formBox button{
  margin-top: 80rpx;
  background:#061127;
  color: #fff;
  width: 80%;
  font-size: 34rpx; 
}