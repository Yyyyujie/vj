/* pages/storesLi/storesLi.wxss */
page{
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}
.storeLi{
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.liLeft{
  width: 70%;
}
.name{
  font-size: 30rpx;
}
.adr{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
color: #aaa;
}
.liRight{
  flex: 1;
  display: flex;
  justify-content: space-around;
}
.liRight>view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-top:10px 0;
  color: #aaa;
}
.address{
width:46rpx;
height:47rpx;
  margin:6px 0;
}
.money{
  font-size: 40rpx;
  color: #E60047;
  position: relative;
}
.icon{
  position: absolute;
  right: -30rpx;
  top: 0;
  font-size: 24rpx;
}
.address image{
  width: 100%;
  height: 100%;
}
.nothing{
  text-align: center;
  line-height: 100rpx;
  color: #aaa;
  font-size: 26rpx;
}