page{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  position: relative;
}
.banner{
  width: 100%;
  height: 32%;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
}
.bannerZi{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.75);
}
.bannerZi image{
  width: 50%;
  height: 70%;
}
.con{
  text-align: center;
  font-size: 28rpx;
  color: #333;
  width: 90%;
  margin: 0 auto 20%;
  background: #fff;
  padding: 20rpx 0 0;
  box-sizing: border-box;
}
.red{
  color: #E60048;
}
.card{
  width: 90%;
  height: 160rpx;
  background: #E60048;
  margin: 20rpx auto;
}
.cardLeft{
  float: left;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #fff;
  padding: 20rpx 20rpx 40rpx;
  box-sizing: border-box;
  align-items: left;
}
.cardLeft>view:first-child{
  font-size: 34rpx;
}
.cardLeft>view:nth-child(2){
  color: rgba(255,255,255,0.7);
  font-size: 24rpx;
}
.cardRight{
  float: right;
  height: 100%;
  color: #fff;
  width: 30%;
  position: relative;
}
.cardRight>view{
  position: absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  line-height:160rpx;
  font-size: 60rpx;
}
.cardRight>view>view{
  font-size:24rpx;
  position:absolute;
  display:inline-block;
  right:20%;
  top:0;
  line-height:120rpx;
}
.cardB{
  color: #BBBABA;
}
.shareBox{
  width: 100%;
  height: 12%;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}
.shareBox button{
  width: 80%;
  background: #E60045;
  color: #fff;
}
.liBox{
  width: 100%;
  overflow: hidden;
}
.Li{
  padding: 30rpx 20rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #ccc;
  color: #777777;
}
.Li:last-child{
  border-bottom: none;
}
.liLeft{
  float: left;
}
.liRight{
  float: right;
  color: #999999;
}
