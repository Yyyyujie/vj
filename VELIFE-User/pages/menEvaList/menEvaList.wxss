page{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.main{
  padding: 20rpx;
}
.title{
  display: flex;
  align-items: center;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}
.evaList{
  width: 100%;
  margin-top: 20rpx;
   background: #fff;
}
.evaLi{
  display: flex;
  margin: 40rpx 0;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 40rpx;
  padding: 20rpx 40rpx;
}
.evaLi:last-child{
  border-bottom: none;
}
.evaLeft{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
}
.evaRight{
  flex: 1;
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.scroll{
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
.first{
  color: #8C929E;

}
image{
  width: 100%;
  height: 100%;
}
.first{
  color: #8C929E;
  position: relative;margin-bottom: 20rpx;
}
.name{
  color: #000;
  margin-right: 10rpx;
}
.score{
  position: absolute;
  right: 0;
  top: 0;
}
.con{
  color: #5E5D64;
  letter-spacing: 2rpx;
  line-height: 34rpx;
}
.conImg{
  width: 190rpx;
  height: 190rpx;
  float: left;
  margin: 20rpx;
}
.pullRight{
  float: right;
}
.imgBox,.bottom{
  overflow: hidden;
  color: #A3A7B1;
  margin: 20rpx 0
}
.bottom>view{
  float: left;
}
.evaScro{
  width: 136rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  justify-content: space-around;
}
.evaScroLi{
  width:24rpx;
height:24rpx;
}
.evaScroLi image{
  float: left;
}
.nothing{
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
  color:#aaa;
}
.smallTitle{
  font-size:26rpx;
  line-height:40rpx;
}
.tabBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
  align-items: center;
}
.tabBox>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  height:100%;
justify-content:center;
padding:0 10rpx 6rpx;
}
.tabBox .active{
  border-bottom: 2rpx solid  #E5254A;
  color: #E5254A;
}
.num{
  font-size: 24rpx;
  margin-bottom:10rpx;
}
.scoreBox{
  display: flex;
  justify-content: center;
}
.scoreLi{
  width: 22rpx;
  height: 22rpx;
}
.scoreLi image{
  float: left;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}