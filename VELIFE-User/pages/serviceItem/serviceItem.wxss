page{
  width: 100%;
  height: 100%;
}
.contain{
  width: 100%;
  height: 100%;
  position: relative;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.barber{
  padding: 20rpx;
  background: #fff;
  width: 100%;
  display: flex;
}
.barberImgBox{
  width: 120rpx;
  height: 120rpx;
  background: #EBEBEB;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.barberImgBox image{
  width: 100%;
  height: 100%;
}
.barberCon{
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.barberName{
  font-size: 46rpx;
  font-weight: bold;
}
.fen{
  text-align: center;
  color: #8A8A8A;
  padding: 20rpx 0;
  font-size: 30rpx;
  background: #EFEFEF;
}
.item{
  padding: 20rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  border-bottom: 2rpx solid #E6E6E6;
  padding-right: 120rpx;
  position: relative;
}
.item view:first-child{
  font-size: 34rpx;
}
.item radio{
  position: absolute;
  right: 20rpx;
  top:37%;
}
.bottomBox{
  height:100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 2rpx solid #E6E6E6;
  padding: 10rpx 20rpx;
  font-size:26rpx;
}
.moneyBox{
  display: flex;
  align-items: center;
  color: #A4A4A4;
}
.moneyBox view:first-child{
  font-size:40rpx;
  color: #E21A44;
}
.qhBtn{
  background: #E21A44;
  color: #fff;
  font-size: 28rpx;
  width: 250rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.mask,.mask2{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.8);
}
.sendBox,.zhiwBox{
  width: 90%;
  height: 400rpx;
  background: #fff;
  position: absolute;
   top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.sendBox .title,.zhiwBox .title{
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}
.maskMain{
  width: 100%;
  padding:  0 20rpx;
  box-sizing: border-box;
}
.phone,.code{
  width: 100%;
  height: 90rpx;
  background: #F5F5F7;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.phone input,.code input{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.btnGroup{
  width: 100%;
  height: 90rpx;
  background: #F5F5F7;
  position: absolute;
  bottom: 0;
}
.btnGroup view{
  display: inline-block;
  width: 50%;
  height: 100%;
  background: #F5F5F7;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
}
.btnGroup .sure{
  background: #E60048;
  color: #fff;
}
.code .sure{
  width: 35%;
  height: 100%;
  background: #E60048;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  z-index: 99
}
.code .sure.disabled{
  background: #ccc;
}
.zhiwBox .phone{
  margin-top: 50rpx;
}